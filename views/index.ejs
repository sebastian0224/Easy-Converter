<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Easy-converter</title>
</head>
<body>

    <div class="container d-flex flex-column justify-content-around min-vh-100 py-4">

        <h1 class="styled-title text-center">Easy-ConverterðŸ’±</h1>

        <form action="/" id="form" class="form-p container-fluid row justify-content-center" method="POST">
            <div class="d-flex flex-column flex-md-row justify-content-between col-md-8">

                <!-- Amount input field -->
                <div class="col-md-4 col-sm-12 mb-3 me-md-3">
                    <% if (locals.amount) { %>
                        <label for="amountInput" class="form-label">Amount:</label>
                        <input type="number" class="form-control" id="amountInput" name="amount" value="<%= amount %>">
                    <% } else { %>
                        <label for="amountInput" class="form-label">Amount:</label>
                        <input type="number" class="form-control" id="amountInput" name="amount">
                    <% } %>
                </div>

                <!-- Base currency selection -->
                <div class="col-md-3 col-sm-12 mb-3 me-md-3">
                    <label for="selectBase" class="form-label">From:</label>
                    <select name="base" class="form-select" id="selectBase">
                        <% for (let i = 0; i < currenciesCodes.length; i++) { %>
                            <option <% if (locals.base) { if (base == currenciesCodes[i][0]) { %>selected<% } } %> >
                                <%= currenciesCodes[i][0] %>-<%= currenciesCodes[i][1] %>
                            </option>
                        <% } %>
                    </select>
                </div>

                <!-- Arrow icon between currencies -->
                <div class="col-md-2 col-sm-12 mb-1 d-flex justify-content-center align-self-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5m14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5"/>
                    </svg>
                </div>

                <!-- Target currency selection -->
                <div class="col-md-3 col-sm-12 mb-3 me-md-3">
                    <label for="selectTarget" class="form-label">To:</label>
                    <select name="target" class="form-select" id="selectTarget">
                        <% for (let i = 0; i < currenciesCodes.length; i++) { %>
                            <option <% if (locals.target) { if (target == currenciesCodes[i][0]) { %>selected<% } } %> >
                                <%= currenciesCodes[i][0] %>-<%= currenciesCodes[i][1] %>
                            </option>
                        <% } %>
                    </select>
                </div>
                
            </div>

            <!-- Submit button -->
            <div class="col-md-12 d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Convert</button>
            </div>
        </form>

        <!-- Result box -->
        <div class="container d-flex justify-content-center align-items-center p-0 mt-4">
            <% if (locals.result && locals.targetCurrency) { %>
                <div class="result-box text-center p-4">
                    <h2>ðŸ’± <%= result %> <%= targetCurrency %> ðŸ“ˆ</h2>
                </div>
            <% } %>
        </div>

    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>